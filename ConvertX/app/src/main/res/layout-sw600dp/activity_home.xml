<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/audio_imageView"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_audio" />

    <RelativeLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <View
            android:id="@+id/view1"
            android:layout_width="600dp"
            android:layout_height="0.5dp"
            android:background="@drawable/convert_divider_view" >
        </View>

        <RelativeLayout
            android:id="@+id/converter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view1"
            android:layout_below="@+id/view1" >

            <View
                android:id="@+id/view2"
                android:layout_width="600dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/converter_imageView"
                android:layout_marginTop="30dp"
                android:background="@drawable/convert_divider_view" />

            <ImageView
                android:id="@+id/converter_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="52dp"
                android:background="@drawable/icon_converter" />

            <TextView
                android:id="@+id/converter_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="66dp"
                android:layout_toRightOf="@+id/converter_imageView"
                android:text="@string/converter"
                android:textColor="#000000"
                android:textSize="45dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/calculator_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/view1"
            android:layout_below="@+id/converter_layout" >

            <View
                android:id="@+id/view3"
                android:layout_width="600dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/calculator_imageView"
                android:layout_marginTop="30dp"
                android:background="@drawable/convert_divider_view" />

            <ImageView
                android:id="@+id/calculator_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="57dp"
                android:background="@drawable/icon_calculator" />

            <TextView
                android:id="@+id/calculator_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="66dp"
                android:layout_toRightOf="@+id/calculator_imageView"
                android:text="@string/calculator"
                android:textColor="#000000"
                android:textSize="45dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/favorite_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/calculator_layout"
            android:layout_below="@+id/calculator_layout" >

            <View
                android:id="@+id/view4"
                android:layout_width="600dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/favorites_imageView"
                android:layout_marginTop="30dp"
                android:background="@drawable/convert_divider_view" />

            <ImageView
                android:id="@+id/favorites_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:background="@drawable/icon_favorites" />

            <TextView
                android:id="@+id/favorites_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="66dp"
                android:layout_toRightOf="@+id/favorites_imageView"
                android:text="@string/favorites"
                android:textColor="#000000"
                android:textSize="45dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/social_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/favorite_layout"
            android:layout_below="@+id/favorite_layout" >

            <ImageView
                android:id="@+id/social_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_social" />

            <TextView
                android:id="@+id/social_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="66dp"
                android:layout_toRightOf="@+id/social_imageView"
                android:text="@string/social"
                android:textColor="#000000"
                android:textSize="45dp" />

            <View
                android:id="@+id/view5"
                android:layout_width="600dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/social_imageView"
                android:layout_marginTop="30dp"
                android:background="@drawable/convert_divider_view" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>